            <a href="/dashboard/add">Create One</a>
          </h4>
        </div>

      </div>

        <% } %>
</div>


  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center mt-5">
   <% if(pages>0){%>

   <%if(current !== 1){%>
   <li class="page-item"><a class="page-link" href="/dashboard">first</a></li>
    <% }else{ %>
   <li class="page-item disabled"><a class="page-link" href="#">first</a></li>  
    <% } %>
    <% } %>


    <% let i= Number(current) > 5 ? Number(current)-4 : 1 %>


    <% if(i !== 1){%>
      <li class="page-item disabled"><a class="page-link" href="">...</a></li>  
      <%}%>
      <% for(; i<=  Number(current)+4 && i<=pages;i++){ %>
        <% if(i == current){ %>
          <li class="page-item active"><a class="page-link" href='#'><%=i%></a></li>
          <% }else{ %>
        <li class="page-item"><a class="page-link" href='/dashboard?page=<%= i %>'><%=i%></a></li>
    <%}%>
    <%}%>


    <% if(i <= pages){%>
      <li class="page-item disabled"><a class="page-link" href='#'>...</a></li>
    <% }else{
      console.log(i)
    } %>

   <% if(pages>4){ %>
    <% if(Number(current) !== pages){ %>
      <li class="page-item"><a class="page-link" href="/dashboard?page=<%= pages %>">last</a></li>
      <% }else{ %>
     <li class="page-item disabled"><a class="page-link" href="">last</a></li>  
      <% } %>
      <% } %>
    </ul>
  </nav>
</div>

