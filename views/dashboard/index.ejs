            <div class="card border-primary" style="min-height: 210px;">
                <a href="/dashboard/items/<%= note[i]._id %>" class="card-body text-decoration-none">
                    <h5 class="card-title"><%= note[i].title %></h5>
                    <p class="card-text"><%= note[i].body %></p>
                </a>
            </div>
        </div>
        
    <% }}else{%>
      <div class="row">
          <div class="col-3">
          <img src="/img/ec1be7be0cbec708e9fa50c18420da06.jpg" style="width: 200px; height: 200px;" alt="">
